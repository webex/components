{
  "name": "@webex/components",
  "version": "1.239.0",
  "browser": "dist/umd/webex-components.umd.min.js",
  "unpkg": "dist/umd/webex-components.umd.min.js",
  "module": "dist/es/webex-components.es.min.js",
  "scripts": {
    "build": "rollup -c",
    "linter": "eslint src/ --ext .js,.jsx",
    "release": "semantic-release",
    "release:debug": "semantic-release --debug",
    "release:dry-run": "semantic-release --dry-run",
    "start": "npm run storybook",
    "storybook": "start-storybook -s ./docs/assets -p 6006",
    "storybook:build": "build-storybook -s ./docs/assets -o ./docs/storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "chromatic": "chromatic"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/webex/components.git"
  },
  "publishConfig": {
    "tag": "latest",
    "access": "public"
  },
  "author": "devsupport@webex.com",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "peerDependencies": {
    "@babel/runtime": "^7.11.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^6.6.2"
  },
  "dependencies": {
    "@juggle/resize-observer": "^3.2.0",
    "@webex/component-adapter-interfaces": "^1.22.0",
    "adaptive-expressions": "^4.15.0",
    "adaptivecards-templating": "^2.2.0",
    "classnames": "^2.2.6",
    "date-fns": "^2.15.0",
    "logform": "^2.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@rollup/plugin-babel": "^5.2.0",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-storyshots": "^6.3.8",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.8",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.6.2",
    "css-loader": "^4.2.2",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-jsdoc": "^30.2.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.0",
    "husky": "^4.2.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "mockdate": "^3.0.2",
    "node-sass": "~4.14.1",
    "react-test-renderer": "^16.13.1",
    "rollup": "^2.26.4",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-license": "^2.2.0",
    "rollup-plugin-scss": "^2.6.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-visualizer": "^4.1.0",
    "sass-loader": "^10.0.1",
    "semantic-release": "^18.0.0",
    "storybook-addon-themes": "^6.1.0",
    "style-loader": "^1.2.1",
    "wait-for-expect": "^3.0.2"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest.setup.js"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test_results/jest",
    "outputName": "results.xml"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        [
          "lower-case",
          "pascal-case"
        ]
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "docs/",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/es/webex-components.es.min.js",
              "label": "ECMAScript (ESM) minified bundle"
            },
            {
              "path": "dist/umd/webex-components.umd.min.js",
              "label": "Universal Module Definition (UMD) minified bundle"
            }
          ]
        }
      ]
    ]
  }
}
